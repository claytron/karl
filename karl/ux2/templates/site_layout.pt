<metal:page define-macro="site">
<!doctype html>
<!--[if lt IE 7]>
<html class="no-js ie6 oldie" lang="en"> <![endif]-->
<!--[if IE 7]>
<html class="no-js ie7 oldie" lang="en"> <![endif]-->
<!--[if IE 8]>
<html class="no-js ie8 oldie" lang="en"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8"/>

    <!-- Use the .htaccess and remove these lines to avoid edge case issues.
 More info: h5bp.com/b/378 -->
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /> -->

    <metal:titleslot metal:define-slot="title_slot">
        <title>${api.page_title}</title>
    </metal:titleslot>

    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Mobile viewport optimized: j.mp/bplateviewport -->
    <meta name="viewport"
          content="width=device-width,initial-scale=1">
    
    <meta id="karl-home-url" content="${api.home_url}"/>

    <metal:resources use-macro="api.snippets.macros['misc_headers']"/>

    <link rel="stylesheet" href="${lm.bottlecap_static}main.css"/>
    <link rel="stylesheet" href="${api.static_url}/ux2/main.css"/>

    <metal:resources use-macro="api.snippets.macros['js_resources']"/>

    <script src="${lm.bottlecap_static}/js/modernizr-2.0.6.min.js"></script>

    <metal:headslot metal:define-slot="extra-headers"/>
</head>
<body>
<div id="top-bar">
    <div class="container">
        <tal:actions_menu
                tal:content="lm.panel('ux2.global_nav', api=api)">
        <tal:actions_menu
                tal:content="lm.panel('ux2.personal_tools', api=api)">
    </div>
</div>

<div class="sectionContainer">
    <div class="container">
        <nav class="search">
            <tal:actions_menu
                    tal:content="lm.panel('ux2.search', api=api)">
        </nav>
        <section>
            <header>
                <h2 tal:content="api.community_info.title|api.page_title"></h2>
            </header>
            <tal:actions_menu
                    tal:content="lm.panel('ux2.context_tools', api=api)">
        </section>
    </div>
</div>

<div class="contentWrapper">
    <section class="main">
        <metal:content define-slot="content"/>
    </section>

    <aside class="column">
        <tal:actions_menu
                tal:content="lm.panel('ux2.column_one', api=api)">
    </aside>
</div>

<footer>
    <tal:footer content="structure api.render_footer()" />
</footer>

<script type="text/javascript" defer
        src="${lm.bottlecap_static}/js/bottlecap.js"></script>
<script type="text/javascript"
        src="${lm.bottlecap_static}/js/dropdown.js"></script>

<metal:tailslot metal:define-slot="tail_slot"/>

</body>
</html>
</metal:page>

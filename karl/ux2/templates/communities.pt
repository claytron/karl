<metal:block use-macro="main_template">

    <metal:content fill-slot="content">

    ${panel('status_message')}
    
    <tal:actions_menu 
        content="panel('popper.actions_menu', actions=actions)">

    <div id="communities-content-wrapper">

    <div id="communities-listing-head">
      <div id="peopledir-letterbox-wrapper">
        ${panel('popper.letter_box')}
      </div>
      <div class="communityOptions">
        <div id="community-filters">
          <label>Community Filters:</label>
          <ul>
            <li tal:repeat="option community_tabs"
            class="${'%s%s%s' % (option['selected'] and 'current' or '',
                               repeat['option'].start and ' firstItem' or '',
                               repeat['option'].end and ' lastItem' or '',)}" >
                <a href="${option['href']}" title="${option['description']}">
                  <span>${option['title']}</span>
                </a>
            </li>
          </ul>
        </div>
        <div id="communitiy-search-box-wrapper">
          <div id="communitiy-search-box">
            <form method="get" action="${api.view_url}">
              <fieldset>
                <div class="field">
                  <input type="text" name="body" value="" />
                  <input type="submit" value="Search" />
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      <div class="visualClear"><!-- --></div>
      </div>
    </div>


    <h3 tal:repeat="qualifier qualifiers">${qualifier}</h3>

    <div tal:condition="error" tal:content="error" />

    <metal:script
        metal:use-macro="layout.macros['gridstyle_batching_script']" />
    <table tal:condition="batch_info['batching_required']" width="100%">
      <tr class="ui-grid-footer">
        <th class="ui-widget-header">
          <div metal:use-macro="layout.snippets.macros['gridstyle_batching']">
          </div>
        </th>
      </tr>
    </table>

    <div class="communityEntry"
         tal:repeat="community communities">

      <div class="klisting_header">
        <a href="${community.url}">${community.title}</a>
        <span tal:condition="not community.public"
          metal:use-macro="layout.macros['privacy_badge']"/>
        <span tal:condition="community.moderator"
          metal:use-macro="layout.macros['moderator_badge']"/>
      </div>

      <p>${community.description}</p>
      <div class="documentByLine">
        <span>${community.number_of_members} Member(s)</span>
        <span> | </span>
        <span>Last Activity: ${community.last_activity_date}</span>
      </div>
    </div>

    <table tal:condition="batch_info['batching_required']" width="100%">
      <tr class="ui-grid-footer">
        <th class="ui-widget-header">
          <div metal:use-macro="layout.snippets.macros['gridstyle_batching']">
          </div>
        </th>
      </tr>
    </table>

  </div>

    </metal:content>
</metal:block>
